{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PublicAndPrivateAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:PutObjectAcl"
            ],
            "Resource": "arn:aws:s3:::havi.app-bucket/*"
        },
        {
            "Sid": "BucketListAccess",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::havi.app-bucket"
        },
        {
            "Sid": "BucketPolicyManagement",
            "Effect": "Allow",
            "Action": [
                "s3:PutBucketPolicy",
                "s3:GetBucketPolicy",
                "s3:DeleteBucketPolicy"
            ],
            "Resource": "arn:aws:s3:::havi.app-bucket"
        }
    ]
}

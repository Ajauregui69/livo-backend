{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PublicReadForProperties",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::havi.app-bucket/public/*"
        },
        {
            "Sid": "AllowSignedURLsForPrivateDocuments",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::havi.app-bucket/private/*",
            "Condition": {
                "StringEquals": {
                    "s3:signatureversion": "AWS4-HMAC-SHA256"
                }
            }
        }
    ]
}
